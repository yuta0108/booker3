<div class="container mt-3 px-5 px-sm-0">
  <div class="row">
    <div class="col-3">
      <%= render "layouts/info", user: @user %>
      <%= render "layouts/new", book: @book %>
    </div>
    <div class="col-8 md-8 offset-md-1">
      <h2>Dogs</h2>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= image_tag book.user.get_profile_image(100,100) %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td id="favorite_btn_<%= book.id %>">
                <%= render "favorites/btn", book: book %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

